<UserControl x:Class="XRF_Data_Analysis_Utilities.View.Workspaces.XrfImageWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary Source="XrfImageWorkspaceResources.xaml"/>
    </UserControl.Resources>
    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Margin="5" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <Label Margin="0,0,-8,0">Element:</Label>
                <Label Content="{Binding Path=Header}" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Range:</Label>
                <Label Content="{Binding Path=MinValue}" Margin="-8,0,-8,0"/>
                <Label>-</Label>
                <Label Content="{Binding Path=MaxValue}" Margin="-8,0,-8,0"/>
                <Label>cts</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Zoom:</Label>
                <Label Content="{Binding Path=Zoom, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Margin="-8,0,-8,0"/>
                <Label FontWeight="Bold">x</Label>
            </StackPanel>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Margin="5" Orientation="Horizontal">
            <Grid>
                <Border BorderBrush="Gray" BorderThickness="2" Margin="65,5,5,25" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <ContentControl Content="{Binding Path=RenderedImage, UpdateSourceTrigger=PropertyChanged}" 
                                RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True"/>
                </Border>
                <Label Content="{Binding Path=Ymax, UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Label Content="{Binding Path=Origin, UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                <Label Content="{Binding Path=Xmax, UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </Grid>
            <StackPanel Margin="4" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label FontWeight="Bold">Max:</Label>
                    <Label Content="{Binding Path=MaxValue}" Margin="-8,0,0,0"/>
                </StackPanel>
                <ContentControl Content="{Binding Path=ColorRamp, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label FontWeight="Bold">Min:</Label>
                    <Label Content="{Binding Path=MinValue}" Margin="-8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
